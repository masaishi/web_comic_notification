<p id="notice"><%= notice %></p>

<h1>Comics</h1>

<table>
  <thead>
    <tr>
      <th>Bookmark</th>
      <th>Site id</th>
      <th>Name</th>
      <th>Url</th>
      <th>Last story</th>
      <th>Send URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= link_to 'Bookmark', comic %></td>
        <td><%= comic.site_id %></td>
        <td><%= comic.name %></td>
        <td><%= comic.url %></td>
        <td><%= comic.last_story %></td>
        <td><%= comic.send_url %></td>
        <td><%= link_to 'Show', comic %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

